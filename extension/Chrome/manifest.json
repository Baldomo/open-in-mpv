{
  "manifest_version": 3,
  "name": "Open In MPV",
  "description": "Open videos and audio files in mpv.",
  "version": "2.4.3",
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Open In mpv"
  }
}